<!DOCTYPE html>
<html>
<head>
    <title>Simple Ball Game</title>
</head>
<body>
    <canvas id="gameCanvas" width="400" height="400"></canvas>

    <script>
        // Get the canvas and context
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');

        // Ball properties
        let x = 200;
        let y = 200;
        let radius = 15;
        let speedX = 2;
        let speedY = 2;

        // Update game frame
        function update() {
            // Clear canvas
            ctx.clearRect(0, 0, canvas.width, canvas.height);

            // Move ball
            x += speedX;
            y += speedY;

            // Bounce off walls
            if (x + radius > canvas.width || x - radius < 0) {
                speedX = -speedX;
            }
            if (y + radius > canvas.height || y - radius < 0) {
                speedY = -speedY;
            }

            // Draw ball
            ctx.beginPath();
            ctx.arc(x, y, radius, 0, Math.PI * 2);
            ctx.fillStyle = "red";
            ctx.fill();
            ctx.closePath();

            // Call update again
            requestAnimationFrame(update);
        }

        // Control with arrow keys
        document.addEventListener("keydown", function(e) {
            if (e.key === "ArrowRight") speedX = 3;
            if (e.key === "ArrowLeft")  speedX = -3;
            if (e.key === "ArrowUp")    speedY = -3;
            if (e.key === "ArrowDown")  speedY = 3;
        });

        // Start the game
        update();
    </script>
</body>
</html>
